{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "space-infix-ops": "error",
    "keyword-spacing": "error",
    "space-before-blocks": "error",
    "arrow-spacing": "error",
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}

